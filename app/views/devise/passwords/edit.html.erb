<% content_for(:main_content) do %>
  <div class="devise-container">
    <div class="devise-subcontainer">
      <h2>Change your password</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field">
          <%= f.label :password, "New password", class: "devise-label" %><br />
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input-field" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "Confirm new password", class: "devise-label" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "input-field" %>
        </div>

        <div class="actions">
          <%= f.submit "Change my password" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>