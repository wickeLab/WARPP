<% content_for(:main_content) do %>
  <div class="devise-container">
    <div class="devise-subcontainer">
      <h2>Forgot your password?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email, class: "devise-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field" %>
        </div>

        <div class="actions">
          <%= f.submit "Send me reset password instructions", class: "submit-button" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>