<% content_for(:main_content) do %>
  <div class="devise-container">
    <div class="devise-subcontainer">
      <h2>Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "devise-form") do |f| %>
        <div class="field">
          <%= f.label :login, class: "devise-label" %>
          <%= f.text_field :login, autofocus: true, autocomplete: "login", class: "input-field" %>
        </div>

        <div class="field">
          <%= f.label :password, class: "devise-label" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "input-field" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="remember-field">
            <%= #f.check_box :remember_me
            %>
            <%= #f.label :remember_me
            %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class: "submit-button" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>